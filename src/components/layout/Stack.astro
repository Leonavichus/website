---
// src/components/layout/Stack.astro
/**
 * Material Design 3 Stack Component
 * Flex контейнер для вертикального или горизонтального выравнивания
 */

export interface Props {
  direction?: 'row' | 'column';
  gap?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'none';
  align?: 'start' | 'center' | 'end' | 'stretch';
  justify?: 'start' | 'center' | 'end' | 'between' | 'around' | 'evenly';
  wrap?: boolean;
  class?: string;
}

const {
  direction = 'column',
  gap = 'md',
  align = 'stretch',
  justify = 'start',
  wrap = false,
  class: className = '',
} = Astro.props;

const gapMap = {
  'none': '0',
  'xs': '4px',
  'sm': '8px',
  'md': '16px',
  'lg': '24px',
  'xl': '32px',
  '2xl': '48px',
};

const alignMap = {
  'start': 'flex-start',
  'center': 'center',
  'end': 'flex-end',
  'stretch': 'stretch',
};

const justifyMap = {
  'start': 'flex-start',
  'center': 'center',
  'end': 'flex-end',
  'between': 'space-between',
  'around': 'space-around',
  'evenly': 'space-evenly',
};
---

<div
  class:list={['stack', className]}
  style={`
    display: flex;
    flex-direction: ${direction};
    gap: ${gapMap[gap]};
    align-items: ${alignMap[align]};
    justify-content: ${justifyMap[justify]};
    ${wrap ? 'flex-wrap: wrap;' : ''}
  `}
>
  <slot />
</div>

<style>
  .stack {
    width: 100%;
  }
</style>
