---
// src/components/ui/ListDivider.astro
/**
 * Material Design 3 List Divider
 */

export interface Props {
  inset?: boolean;
  class?: string;
}

const {
  inset = false,
  class: className = '',
} = Astro.props;
---

<li
  class:list={[
    'list-divider',
    { 'list-divider-inset': inset },
    className,
  ]}
  role="separator"
></li>

<style>
  .list-divider {
    height: 1px;
    background-color: var(--md-sys-color-outline-variant);
    margin: 8px 0;
    list-style: none;
  }

  .list-divider-inset {
    margin-left: 56px;
  }
</style>
