---
// src/components/ui/Switch.astro
/**
 * Material Design 3 Switch Component - FINAL VERSION
 */

export interface Props {
  name: string;
  label?: string;
  checked?: boolean;
  disabled?: boolean;
  value?: string;
  class?: string;
}

const {
  name,
  label,
  checked = false,
  disabled = false,
  value,
  class: className = '',
} = Astro.props;

import Icon from './Icon.astro';
---

<label
  class:list={[
    'switch-wrapper',
    { 'switch-disabled': disabled },
    className,
  ]}
>
  <input
    type="checkbox"
    role="switch"
    name={name}
    checked={checked}
    disabled={disabled}
    value={value}
    class="switch-input"
  />

  <span class="switch-track">
    <span class="switch-handle">
      <span class="switch-icon">
        <Icon name={checked ? 'check' : 'close'} size="small" />
      </span>
      <span class="switch-state-layer"></span>
    </span>
  </span>

  {label && <span class="switch-label">{label}</span>}
</label>

<style>
  .switch-wrapper {
    display: inline-flex;
    align-items: center;
    gap: 16px;
    cursor: pointer;
    user-select: none;
  }

  .switch-input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  /* Track - FIXED SIZE */
  .switch-track {
    position: relative;
    display: inline-block;
    width: 52px;
    height: 32px;
    border-radius: 16px;
    border: 2px solid var(--md-sys-color-outline);
    background-color: var(--md-sys-color-surface-container-highest);
    transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
    flex-shrink: 0;
    overflow: hidden;
  }

  /* Handle - STAYS INSIDE */
  .switch-handle {
    position: absolute;
    top: 50%;
    left: 4px;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: var(--md-sys-color-outline);
    transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Icon inside handle */
  .switch-icon {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--md-sys-color-surface-container-highest);
    opacity: 0;
    transform: scale(0);
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .switch-icon :global(.icon) {
    font-size: 16px;
  }

  /* State layer */
  .switch-state-layer {
    position: absolute;
    inset: -8px;
    border-radius: 50%;
    background-color: var(--md-sys-color-on-surface);
    opacity: 0;
    transition: opacity 150ms cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 0;
  }

  .switch-wrapper:hover .switch-state-layer {
    opacity: 0.08;
  }

  .switch-input:focus-visible ~ .switch-track .switch-state-layer {
    opacity: 0.12;
  }

  .switch-wrapper:active .switch-state-layer {
    opacity: 0.12;
  }

  /* Checked state - HANDLE STAYS INSIDE! */
  .switch-input:checked ~ .switch-track {
    background-color: var(--md-sys-color-primary);
    border-color: var(--md-sys-color-primary);
  }

  .switch-input:checked ~ .switch-track .switch-handle {
    left: 24px;
    width: 24px;
    height: 24px;
    background-color: var(--md-sys-color-on-primary);
  }

  .switch-input:checked ~ .switch-track .switch-icon {
    opacity: 1;
    transform: scale(1);
    color: var(--md-sys-color-primary-container);
  }

  .switch-input:checked ~ .switch-track .switch-state-layer {
    background-color: var(--md-sys-color-primary);
  }

  /* Label */
  .switch-label {
    font-family: var(--md-sys-typescale-body-large-font);
    font-size: var(--md-sys-typescale-body-large-size);
    color: var(--md-sys-color-on-surface);
    line-height: 1.5;
  }

  /* Disabled */
  .switch-disabled {
    opacity: 0.38;
    pointer-events: none;
  }

  /* Focus visible */
  .switch-input:focus-visible ~ .switch-track {
    outline: 2px solid var(--md-sys-color-primary);
    outline-offset: 2px;
  }
</style>
