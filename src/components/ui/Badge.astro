---
/**
 * Badge Component - Enhanced Material Design 3
 * Modern badge with animations and glow effects
 */
export interface Props {
  count?: number;
  dot?: boolean;
  max?: number;
  class?: string;
  variant?: 'error' | 'primary' | 'secondary' | 'success';
}

const {
  count,
  dot = false,
  max = 99,
  class: className = '',
  variant = 'error'
} = Astro.props;

const displayCount = count && count > max ? `${max}+` : count;
---

<div class:list={['badge-wrapper', className]}>
  <slot />
  {(count || dot) && (
    <span class:list={['badge', `badge--${variant}`, { 'badge--dot': dot }]} data-badge>
      {!dot && displayCount}
      <span class="badge__glow"></span>
    </span>
  )}
</div>

<style>
  .badge-wrapper {
    position: relative;
    display: inline-flex;
  }

  .badge {
    position: absolute;
    top: -2px;
    right: -2px;
    transform: translate(50%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 6px;
    border-radius: 10px;
    border: 2px solid var(--md-sys-color-surface);
    color: var(--md-sys-color-on-error);
    font-family: var(--md-sys-typescale-label-small-font);
    font-size: 11px;
    font-weight: 700;
    line-height: 20px;
    white-space: nowrap;
    box-sizing: border-box;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    animation: badge-pop 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    overflow: hidden;
    position: relative;
  }

  @keyframes badge-pop {
    0% {
      transform: translate(50%, -50%) scale(0);
      opacity: 0;
    }
    50% {
      transform: translate(50%, -50%) scale(1.2);
    }
    100% {
      transform: translate(50%, -50%) scale(1);
      opacity: 1;
    }
  }

  /* Variants */
  .badge--error {
    background: linear-gradient(135deg, 
      var(--md-sys-color-error),
      color-mix(in srgb, var(--md-sys-color-error) 80%, #ff0000)
    );
  }

  .badge--primary {
    background: linear-gradient(135deg, 
      var(--md-sys-color-primary),
      color-mix(in srgb, var(--md-sys-color-primary) 80%, #0000ff)
    );
    color: var(--md-sys-color-on-primary);
  }

  .badge--secondary {
    background: linear-gradient(135deg, 
      var(--md-sys-color-secondary),
      color-mix(in srgb, var(--md-sys-color-secondary) 80%, #666)
    );
    color: var(--md-sys-color-on-secondary);
  }

  .badge--success {
    background: linear-gradient(135deg, #4CAF50, #66BB6A);
    color: white;
  }

  /* Glow effect */
  .badge__glow {
    position: absolute;
    inset: -2px;
    border-radius: 12px;
    opacity: 0.6;
    animation: badge-glow 2s ease-in-out infinite;
    pointer-events: none;
  }

  .badge--error .badge__glow {
    background: radial-gradient(circle, var(--md-sys-color-error) 0%, transparent 70%);
  }

  .badge--primary .badge__glow {
    background: radial-gradient(circle, var(--md-sys-color-primary) 0%, transparent 70%);
  }

  .badge--secondary .badge__glow {
    background: radial-gradient(circle, var(--md-sys-color-secondary) 0%, transparent 70%);
  }

  .badge--success .badge__glow {
    background: radial-gradient(circle, #4CAF50 0%, transparent 70%);
  }

  @keyframes badge-glow {
    0%, 100% {
      transform: scale(1);
      opacity: 0.4;
    }
    50% {
      transform: scale(1.3);
      opacity: 0.6;
    }
  }

  /* Dot variant */
  .badge--dot {
    min-width: 10px;
    width: 10px;
    height: 10px;
    padding: 0;
    border-radius: 5px;
    top: 0;
    right: 0;
  }

  .badge--dot .badge__glow {
    inset: -3px;
  }

  /* Pulse animation for new notifications */
  @keyframes badge-pulse {
    0% {
      box-shadow: 0 0 0 0 currentColor;
    }
    70% {
      box-shadow: 0 0 0 6px transparent;
    }
    100% {
      box-shadow: 0 0 0 0 transparent;
    }
  }

  .badge[data-new] {
    animation: badge-pop 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55),
               badge-pulse 1.5s ease-out 0.4s;
  }
</style>