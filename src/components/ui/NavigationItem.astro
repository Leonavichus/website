---
// src/components/ui/NavigationItem.astro
/**
 * Material Design 3 Navigation Item Component
 * ИСПРАВЛЕНО: Badge правильно центрирован
 */

export interface Props {
  icon: string;
  label: string;
  active?: boolean;
  badge?: number;
  href?: string;
  class?: string;
}

const {
  icon,
  label,
  active = false,
  badge,
  href = '#',
  class: className = '',
} = Astro.props;

import Icon from './Icon.astro';
---

<a
  href={href}
  class:list={[
    'navigation-item',
    { 'navigation-item-active': active },
    className,
  ]}
  aria-label={label}
  aria-current={active ? 'page' : undefined}
>
  <div class="navigation-item-container">
    <div class="navigation-item-icon-wrapper">
      <span class="navigation-item-icon">
        <Icon name={icon} />
      </span>
      {badge && badge > 0 && (
        <span class="navigation-item-badge">{badge}</span>
      )}
    </div>
  </div>
  <span class="navigation-item-label">{label}</span>
</a>

<style>
  .navigation-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    padding: 12px 16px 16px;
    flex: 1;
    max-width: 120px;
    background: transparent;
    color: var(--md-sys-color-on-surface-variant);
    text-decoration: none;
    cursor: pointer;
    transition: color 200ms cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .navigation-item-container {
    position: relative;
    width: 64px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    transition: background-color 200ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .navigation-item:hover .navigation-item-container {
    background-color: var(--md-sys-color-surface-container-highest);
  }

  .navigation-item-active .navigation-item-container {
    background-color: var(--md-sys-color-secondary-container);
  }

  .navigation-item-active {
    color: var(--md-sys-color-on-surface);
  }

  .navigation-item-active .navigation-item-icon {
    color: var(--md-sys-color-on-secondary-container);
  }

  .navigation-item-icon-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .navigation-item-icon {
    font-size: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .navigation-item-label {
    font-family: var(--md-sys-typescale-label-medium-font);
    font-size: var(--md-sys-typescale-label-medium-size);
    font-weight: var(--md-sys-typescale-label-medium-weight);
    line-height: 16px;
  }

  /* Badge - КЛЮЧЕВОЕ ИСПРАВЛЕНИЕ */
  .navigation-item-badge {
    position: absolute;
    top: -4px;
    right: -8px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 16px;
    height: 16px;
    padding: 0 4px;
    border-radius: 8px;
    background-color: var(--md-sys-color-error);
    color: var(--md-sys-color-on-error);
    font-family: var(--md-sys-typescale-label-small-font);
    font-size: 11px;
    font-weight: 700;
    line-height: 16px;
    white-space: nowrap;
    box-sizing: border-box;
  }
</style>
