---
/**
 * Timeline Component - FINAL
 * Material Design 3 vertical timeline
 */
import Icon from './Icon.astro';

interface TimelineItem {
  title: string;
  description?: string;
  date?: string;
  icon?: string;
  color?: 'primary' | 'secondary' | 'tertiary' | 'success' | 'error';
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="timeline">
  {items.map((item, index) => (
    <div class="timeline__item">
      <div class="timeline__line-container">
        <div class:list={['timeline__marker', item.color && `timeline__marker--${item.color}`]}>
          {item.icon ? (
            <Icon name={item.icon} class="timeline__icon" />
          ) : (
            <div class="timeline__dot"></div>
          )}
        </div>
        {index < items.length - 1 && (
          <div class="timeline__line"></div>
        )}
      </div>

      <div class="timeline__content">
        {item.date && (
          <div class="timeline__date">{item.date}</div>
        )}
        <div class="timeline__title">{item.title}</div>
        {item.description && (
          <div class="timeline__description">{item.description}</div>
        )}
      </div>
    </div>
  ))}
</div>

<style>
  .timeline {
    display: flex;
    flex-direction: column;
  }

  .timeline__item {
    display: grid;
    grid-template-columns: 60px 1fr;
    gap: 20px;
    position: relative;
  }

  .timeline__line-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .timeline__marker {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--md-sys-color-surface);
    border: 3px solid var(--md-sys-color-primary);
    flex-shrink: 0;
    z-index: 2;
  }

  .timeline__marker--secondary {
    border-color: var(--md-sys-color-secondary);
  }

  .timeline__marker--tertiary {
    border-color: var(--md-sys-color-tertiary);
  }

  .timeline__marker--success {
    border-color: #4CAF50;
  }

  .timeline__marker--error {
    border-color: var(--md-sys-color-error);
  }

  .timeline__icon {
    font-size: 24px;
    color: var(--md-sys-color-primary);
  }

  .timeline__marker--secondary .timeline__icon {
    color: var(--md-sys-color-secondary);
  }

  .timeline__marker--tertiary .timeline__icon {
    color: var(--md-sys-color-tertiary);
  }

  .timeline__marker--success .timeline__icon {
    color: #4CAF50;
  }

  .timeline__marker--error .timeline__icon {
    color: var(--md-sys-color-error);
  }

  .timeline__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--md-sys-color-primary);
  }

  .timeline__marker--secondary .timeline__dot {
    background: var(--md-sys-color-secondary);
  }

  .timeline__marker--tertiary .timeline__dot {
    background: var(--md-sys-color-tertiary);
  }

  .timeline__marker--success .timeline__dot {
    background: #4CAF50;
  }

  .timeline__marker--error .timeline__dot {
    background: var(--md-sys-color-error);
  }

  .timeline__line {
    width: 2px;
    flex: 1;
    min-height: 40px;
    background: var(--md-sys-color-outline-variant);
    margin-top: 4px;
  }

  .timeline__content {
    padding: 8px 0 32px 0;
  }

  .timeline__date {
    color: var(--md-sys-color-on-surface-variant);
    font: var(--md-sys-typescale-label-medium);
    margin-bottom: 8px;
  }

  .timeline__title {
    color: var(--md-sys-color-on-surface);
    font: var(--md-sys-typescale-title-medium);
    font-weight: 600;
    margin-bottom: 4px;
  }

  .timeline__description {
    color: var(--md-sys-color-on-surface-variant);
    font: var(--md-sys-typescale-body-medium);
    line-height: 1.6;
  }
</style>
