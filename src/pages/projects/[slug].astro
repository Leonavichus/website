---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Button from '../../components/ui/Button.astro';
import GitHubBadge from '../../components/features/GitHubBadge.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project: CollectionEntry<'projects'>) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const data = project.data;
---

<Layout title={`${data.title} - DARK NIGHT`}>
  <Header />

  <section class="project-hero">
    <div class="project-hero-content">
      <div class="project-info">
        <h1>{data.title}</h1>
        <p class="project-tagline">{data.tagline}</p>
        <p class="project-description">{data.description}</p>
        <div class="project-github-stats">
        <GitHubBadge repo="Zest" type="stars" />
        <GitHubBadge repo="Zest" type="forks" />
        <GitHubBadge repo="Zest" type="watchers" />
        </div>
        <div class="project-badges">
          {data.version && <span class="badge primary">{data.version}</span>}
          {data.badges.map((badge: string) => <span class="badge">{badge}</span>)}
        </div>
        <div class="project-actions">
          {data.downloadLink && (
            <Button href={data.downloadLink} icon="download">Скачать</Button>
          )}
          {data.github && (
            <Button href={data.github} icon="code">GitHub</Button>
          )}
          {data.demoLink && (
            <Button href={data.demoLink} icon="visibility">Демо</Button>
          )}
        </div>
      </div>
      <div class="project-preview">
        <span class="material-icons">{data.icon}</span>
      </div>
    </div>
  </section>

  {data.stats && (
    <section class="content-section">
      <div class="stats-grid">
        {data.stats.downloads && (
          <div class="stat-card">
            <div class="stat-value">{data.stats.downloads}</div>
            <div class="stat-label">Скачиваний</div>
          </div>
        )}
        {data.stats.rating && (
          <div class="stat-card">
            <div class="stat-value">{data.stats.rating}</div>
            <div class="stat-label">Рейтинг</div>
          </div>
        )}
        {data.stats.stars && (
          <div class="stat-card">
            <div class="stat-value">{data.stats.stars}</div>
            <div class="stat-label">GitHub Stars</div>
          </div>
        )}
        {data.stats.contributors && (
          <div class="stat-card">
            <div class="stat-value">{data.stats.contributors}</div>
            <div class="stat-label">Контрибьюторов</div>
          </div>
        )}
      </div>
    </section>
  )}

  {data.features && data.features.length > 0 && (
    <section class="content-section">
      <h2 class="section-title">Основные возможности</h2>
      <div class="features-grid">
        {data.features.map((feature: { icon: string; title: string; description: string }) => (
          <div class="feature-card">
            <div class="feature-icon">
              <span class="material-icons">{feature.icon}</span>
            </div>
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </section>
  )}

  {data.techStack && data.techStack.length > 0 && (
    <section class="content-section">
      <div class="tech-stack">
        <h2 class="section-title">Технологический стек</h2>
        <div class="tech-items">
          {data.techStack.map((tech: { emoji: string; title: string; subtitle: string }) => (
            <div class="tech-item">
              <div class="tech-item-icon">{tech.emoji}</div>
              <h4>{tech.title}</h4>
              <p>{tech.subtitle}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <section class="content-section">
    <div class="download-section">
      <h2>Готовы попробовать?</h2>
      <p>Начните использовать {data.title} прямо сейчас</p>
      <div class="download-buttons">
        {data.downloadLink && (
          <Button href={data.downloadLink} class="download-btn" icon="download">Скачать</Button>
        )}
        {data.github && (
          <Button href={data.github} class="download-btn" icon="code">Исходный код</Button>
        )}
        {data.demoLink && (
          <Button href={data.demoLink} class="download-btn" icon="visibility">Попробовать</Button>
        )}
      </div>
    </div>
  </section>

  <section class="content-section back-section">
    <Button href="/#projects" icon="arrow_back">Все проекты</Button>
  </section>

  <Footer />
</Layout>

<style>
  .project-hero {
    padding: 130px 32px 70px;
    background: linear-gradient(165deg, var(--md-sys-color-background) 0%, var(--md-sys-color-surface) 100%);
  }

  .project-hero-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .project-info h1 {
    font-size: 56px;
    font-weight: 900;
    margin-bottom: 16px;
    letter-spacing: -1px;
  }

  .project-tagline {
    font-size: 20px;
    color: var(--md-sys-color-secondary);
    margin-bottom: 22px;
    font-weight: 500;
  }

  .project-description {
    font-size: 17px;
    line-height: 1.7;
    color: var(--md-sys-color-on-surface-variant);
    margin-bottom: 28px;
  }

  .project-badges {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 28px;
  }

  .project-github-stats {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin: 20px 0;
  }

  .badge {
    background-color: var(--md-sys-color-surface-container-highest);
    color: var(--md-sys-color-on-surface);
    padding: 8px 18px;
    border-radius: 100px;
    font-size: 14px;
    font-weight: 600;
    border: 1px solid var(--md-sys-color-outline-variant);
    transition: all 0.3s;
  }

  .badge:hover {
    border-color: var(--md-sys-color-primary);
    transform: translateY(-2px);
  }

  .badge.primary {
    background-color: var(--md-sys-color-primary-container);
    color: var(--md-sys-color-on-primary-container);
    border-color: var(--md-sys-color-primary);
  }

  .project-actions {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
  }

  .project-preview {
    background: linear-gradient(135deg, var(--md-sys-color-primary-container), var(--md-sys-color-secondary-container));
    border-radius: 24px;
    height: 480px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--md-sys-color-on-primary-container);
    border: 1px solid var(--md-sys-color-primary);
    transition: all 0.4s;
  }

  .project-preview .material-icons {
    font-size: 120px;
  }

  .project-preview:hover {
    transform: translateY(-4px) scale(1.02);
  }

  .content-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 70px 32px;
  }

  .section-title {
    font-size: 36px;
    font-weight: 800;
    margin-bottom: 44px;
    text-align: center;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 24px;
  }

  .stat-card {
    background-color: var(--md-sys-color-surface-container);
    border-radius: 20px;
    padding: 32px;
    text-align: center;
    border: 1px solid var(--md-sys-color-outline-variant);
    transition: all 0.4s;
  }

  .stat-card:hover {
    border-color: var(--md-sys-color-primary);
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
  }

  .stat-value {
    font-size: 48px;
    font-weight: 900;
    color: var(--md-sys-color-primary);
    margin-bottom: 8px;
  }

  .stat-label {
    font-size: 16px;
    color: var(--md-sys-color-on-surface-variant);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .feature-card {
    background-color: var(--md-sys-color-surface-container);
    border-radius: 20px;
    padding: 32px;
    border: 1px solid var(--md-sys-color-outline-variant);
    transition: all 0.4s;
  }

  .feature-card:hover {
    border-color: var(--md-sys-color-primary);
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
  }

  .feature-icon {
    width: 56px;
    height: 56px;
    background-color: var(--md-sys-color-primary-container);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 18px;
    color: var(--md-sys-color-on-primary-container);
    transition: all 0.3s;
  }

  .feature-icon .material-icons {
    font-size: 28px;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .feature-card h3 {
    font-size: 20px;
    margin-bottom: 12px;
    color: var(--md-sys-color-on-surface);
  }

  .feature-card p {
    color: var(--md-sys-color-on-surface-variant);
    line-height: 1.6;
  }

  .tech-stack {
    background-color: var(--md-sys-color-surface-container);
    border-radius: 24px;
    padding: 44px;
    border: 1px solid var(--md-sys-color-outline-variant);
  }

  .tech-items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 32px;
    margin-top: 32px;
  }

  .tech-item {
    text-align: center;
    transition: all 0.3s;
  }

  .tech-item:hover {
    transform: translateY(-4px);
  }

  .tech-item-icon {
    font-size: 48px;
    margin-bottom: 14px;
  }

  .tech-item h4 {
    font-size: 18px;
    margin-bottom: 8px;
    color: var(--md-sys-color-on-surface);
  }

  .tech-item p {
    font-size: 14px;
    color: var(--md-sys-color-on-surface-variant);
  }

  .download-section {
    background: linear-gradient(135deg, var(--md-sys-color-primary-container), var(--md-sys-color-secondary-container));
    border-radius: 28px;
    padding: 60px 48px;
    text-align: center;
    border: 1px solid var(--md-sys-color-primary);
    transition: all 0.4s;
  }

  .download-section:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.5);
  }

  .download-section h2 {
    font-size: 40px;
    font-weight: 800;
    margin-bottom: 18px;
    color: var(--md-sys-color-on-primary-container);
  }

  .download-section p {
    font-size: 18px;
    margin-bottom: 32px;
    color: var(--md-sys-color-on-primary-container);
    opacity: 0.95;
  }

  .download-buttons {
    display: flex;
    gap: 14px;
    justify-content: center;
    flex-wrap: wrap;
  }

  :global(.download-btn) {
    background-color: white !important;
    color: var(--md-sys-color-primary-container) !important;
  }

  :global(.download-btn:hover) {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(255, 255, 255, 0.3) !important;
  }

  .back-section {
    text-align: center;
    padding-top: 0;
  }

  @media (max-width: 1024px) {
    .project-hero-content {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .project-info h1 {
      font-size: 36px;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .content-section {
      padding: 50px 20px;
    }
  }
</style>
