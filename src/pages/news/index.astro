---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const allNews = await getCollection('news', ({ data }: CollectionEntry<'news'>) => {
  return data.published === true;
});

const sortedNews = allNews.sort((a: CollectionEntry<'news'>, b: CollectionEntry<'news'>) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const featured = sortedNews.find((item: CollectionEntry<'news'>) => item.data.featured);
const regularNews = sortedNews.filter((item: CollectionEntry<'news'>) => !item.data.featured);

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('ru-RU', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  }).format(date);
}
---

<Layout title="Новости - DARK NIGHT">
  <Header />

  <div class="page-header">
    <h1>Новости</h1>
    <p>Последние обновления проектов, релизы и новости сообщества</p>
  </div>

  <div class="news-container">
    {featured && (
      <article class="featured-post">
        <div class="featured-image">{featured.data.emoji}</div>
        <div class="featured-content">
          <div class="post-meta">
            <span><span class="material-icons">calendar_today</span>{formatDate(featured.data.pubDate)}</span>
            {featured.data.readTime && (
              <span><span class="material-icons">schedule</span>{featured.data.readTime}</span>
            )}
            <span><span class="material-icons">category</span>{featured.data.category}</span>
          </div>
          <h2>{featured.data.title}</h2>
          <p>{featured.data.description}</p>
          <a href={`/news/${featured.id}`} class="read-more">
            Читать полностью
            <span class="material-icons">arrow_forward</span>
          </a>
        </div>
      </article>
    )}

    <div class="news-grid">
      {regularNews.map((item: CollectionEntry<'news'>) => (
        <article class="news-card">
          <div class="news-image">{item.data.emoji}</div>
          <div class="news-content">
            <span class="post-category">{item.data.category}</span>
            <div class="post-meta">
              <span><span class="material-icons">calendar_today</span>{formatDate(item.data.pubDate)}</span>
            </div>
            <h3>{item.data.title}</h3>
            <p>{item.data.description}</p>
            <a href={`/news/${item.id}`} class="read-more">
              Читать далее <span class="material-icons">arrow_forward</span>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>

  <Footer />
</Layout>

<style>
  .page-header {
    padding: 140px 32px 70px;
    text-align: center;
    background: var(--md-sys-color-background);
    position: relative;
    overflow: hidden;
  }


  .page-header h1 {
    font-size: 64px;
    font-weight: 900;
    margin-bottom: 18px;
    letter-spacing: -1px;
    position: relative;
    z-index: 1;
  }

  .page-header p {
    font-size: 20px;
    color: var(--md-sys-color-on-surface-variant);
    max-width: 600px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .news-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 70px 32px;
  }

  .featured-post {
    background-color: var(--md-sys-color-surface-container);
    border-radius: 28px;
    overflow: hidden;
    margin-bottom: 70px;
    border: 1px solid var(--md-sys-color-outline-variant);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .featured-post:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.6);
    border-color: var(--md-sys-color-primary);
  }

  .featured-image {
    width: 100%;
    height: 420px;
    background: var(--md-sys-color-surface-container-high);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 96px;
    color: var(--md-sys-color-on-surface-variant);
    transition: all 0.4s;
  }

  .featured-post:hover .featured-image {
    transform: scale(1.05);
  }

  .featured-content {
    padding: 44px;
  }

  .post-meta {
    display: flex;
    gap: 20px;
    margin-bottom: 18px;
    font-size: 14px;
    color: var(--md-sys-color-secondary);
    font-weight: 500;
    flex-wrap: wrap;
  }

  .post-meta span {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .post-meta .material-icons {
    font-size: 16px;
  }

  .featured-content h2 {
    font-size: 40px;
    font-weight: 800;
    margin-bottom: 16px;
    color: var(--md-sys-color-on-surface);
    letter-spacing: -0.5px;
  }

  .featured-content p {
    font-size: 18px;
    line-height: 1.7;
    color: var(--md-sys-color-on-surface-variant);
    margin-bottom: 26px;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--md-sys-color-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 16px;
    transition: gap 0.3s;
  }

  .read-more:hover {
    gap: 12px;
  }

  .read-more .material-icons {
    font-size: 18px;
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: 28px;
  }

  .news-card {
    background-color: var(--md-sys-color-surface-container);
    border-radius: 24px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--md-sys-color-outline-variant);
    cursor: pointer;
  }

  .news-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
    border-color: var(--md-sys-color-primary);
  }

  .news-image {
    width: 100%;
    height: 220px;
    background: linear-gradient(135deg, var(--md-sys-color-surface-container-high), var(--md-sys-color-surface-container-highest));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 64px;
    color: var(--md-sys-color-on-surface-variant);
    transition: all 0.4s;
  }

  .news-card:hover .news-image {
    transform: scale(1.05);
  }

  .news-content {
    padding: 26px;
  }

  .news-content h3 {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 12px;
    color: var(--md-sys-color-on-surface);
  }

  .news-content p {
    font-size: 15px;
    line-height: 1.6;
    color: var(--md-sys-color-on-surface-variant);
    margin-bottom: 18px;
  }

  .post-category {
    display: inline-block;
    background-color: var(--md-sys-color-surface-container-highest);
    color: var(--md-sys-color-primary);
    padding: 6px 16px;
    border-radius: 100px;
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 14px;
    transition: all 0.3s;
  }

  .news-card:hover .post-category {
    background-color: var(--md-sys-color-primary-container);
    color: var(--md-sys-color-on-primary-container);
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 40px;
    }

    .news-grid {
      grid-template-columns: 1fr;
    }

    .news-container {
      padding: 50px 20px;
    }
  }
</style>
